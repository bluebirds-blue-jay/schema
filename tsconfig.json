{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "inlineSourceMap": true,
    "lib": ["es2017"],
    "types": ["node", "mocha"]
  },
  "exclude": [
    "node_modules",
    "lib",
    "./src/utils/clean-options.ts",
    "./src/utils/make-schema.ts",
    "./src/utils/nullable.ts"
  ]
}